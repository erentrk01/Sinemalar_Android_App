<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemOntheatermovieConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ontheaterimageView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/violent" />

    <TextView
        android:id="@+id/ontheaterMovieName"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="@string/Vizyon_movie_name"
        android:textColor="#F3EEEE"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ontheaterimageView"
        app:layout_constraintEnd_toEndOf="@+id/ontheaterimageView"
        app:layout_constraintStart_toStartOf="@+id/ontheaterimageView" />
</androidx.constraintlayout.widget.ConstraintLayout>