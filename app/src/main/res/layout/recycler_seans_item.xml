<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemSeansConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="250sp"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movieImageViewItem"
        android:layout_width="166dp"
        android:layout_height="192dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/violent" />

    <TextView
        android:id="@+id/TvmovieTitle"
        android:layout_width="140dp"
        android:layout_height="64dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="68dp"
        android:text="VahÅŸi Gece"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewShowSeans"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="48dp"
        android:text="@string/seans_btn"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvmovieSubtitle"
        android:layout_width="125dp"
        android:layout_height="41dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="84dp"
        android:text="Violent Night"
        android:textColor="#3A3838"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>